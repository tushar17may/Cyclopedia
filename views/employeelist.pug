extends base.pug

block style
    style
      include ../static/style.css
      include ../static/stylecontact.css

block content
    #table
      h3
      a.btn.btn-secondary(href='/employee') Create New                  
      h1 Employee List
      |             
      table.table.table-dark.table-striped.my-4
        thead
          tr
            th(scope='col') Name
            |                     
            th(scope='col') Email
            |                     
            th(scope='col') Address
            |                     
            th(scope='col') Phone
            |                     
            th(scope='col') concern
            |                     
            th(scope='col') 
        |                 
           
                         
        tbody#tablebody
          each list in lists
            thead
              tr
                td(scope='col')= list.name
                |                     
                td(scope='col')= list.email
                |                     
                td(scope='col')= list.address
                |                     
                td(scope='col')= list.phone
                |                     
                td(scope='col')= list.desc
                |                     
                td
                  a(href=`/employee/${list._id}`) UPD
                  |                 
                  a(href=`/employee/delete/${list._id}`, onclick="return confirm('Are you sure to delete this record ?');") DEL         
        |                  
        
        
